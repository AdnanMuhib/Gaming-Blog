@model GamingBlog.Models.PCategory

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Dash.cshtml";
}

<h2>Details</h2>

<table class="table">
    <tr style="background-color:#930050;color:white">
        <th style="text-align:center">
            Product Name
        </th>
        <th style="text-align:center">
            Product Price
        </th>
        <th style="text-align:center">
            Published Date
        </th>
        <th style="text-align:center">
            Product Category
        </th>
        <th style="text-align:center">
            Product Status
        </th>
        <th style="text-align:center">
            Item Status
        </th>
        <th style="text-align:center">
            Quantity
        </th>
        <th style="text-align:center">
            Post Picture
        </th>

    </tr>
    @foreach (var item in ViewBag.product)
            {
        <tr>
            <td style="text-align:center">
                @item.ProductName
            </td>
            <td style="text-align:center">
                @item.ProductPrice
            </td>
            <td style="text-align:center">
                @item.Date
            </td>
            <td style="text-align:center">
                @item.ProductCategory
            </td>
            <td style="text-align:center">
                @item.ProductStatus
            </td>
            <td style="text-align:center">
                @item.itemStatus
            </td>
            <td style="text-align:center">
                @item.quantity
            </td>
            <td>
                <img src="@item.ImageUrl" class="img img-responsive" style="width:50px;height:50px" />
            </td>
        </tr>
    }

</table>

<span class="btn btn-primary  glyphicon glyphicon-arrow-left" id="myButton">
    @Html.ActionLink("Back", "Index")
</span>