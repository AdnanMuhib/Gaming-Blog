@model GamingBlog.Models.Post

@{
    ViewBag.Title = "DetailsAdmin";
    Layout = "~/Views/Shared/_Dash.cshtml";
}
<h2></h2>

<table class="table">
    <tr style="background-color:#930050;color:white">
        <th style="text-align:center">
            Post Title
        </th>
        <th style="text-align:center">
            Author Name
        </th>
        <th style="text-align:center">
            Published Date
        </th>
        <th style="text-align:center">
            Post Category
        </th>
        <th style="text-align:center">
            Post Status
        </th>
        <th style="text-align:center">
            Post Picture
        </th>
    </tr>
    @foreach (var item in ViewBag.post)
            {
        <tr>
            <td style="text-align:center">
                @item.PostTitle
            </td>
            <td style="text-align:center">
                @item.AuthorName
            </td>
            <td style="text-align:center">
                @item.Date
            </td>
            <td style="text-align:center">
                @item.PostCategory
            </td>
            <td style="text-align:center">
                @item.PostStatus
            </td>
            <td>
                <img src="@item.ImageUrl" class="img img-responsive" style="width:50px;height:50px" />
            </td>
        </tr>
    }

</table>

    <span class="btn btn-primary  glyphicon glyphicon-arrow-left" " id="myButton">
        @Html.ActionLink("Back", "IndexAdmin")
    </span>
</p>
