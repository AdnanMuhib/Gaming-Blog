        @Html.AntiForgeryToken()
        <br />
        <div class="col-md-2">
            <span class="btn btn-primary  glyphicon glyphicon-arrow-left" id="myButton">
                @Html.ActionLink("Back", "Display")
            </span>
        </div>
        <div class="form-actions no-color col-md-6">
            <input type="submit" value="Delete" class="btn btn-danger" />
