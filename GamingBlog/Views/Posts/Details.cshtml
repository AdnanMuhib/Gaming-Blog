
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #myCarousel {
        display: none;
    }
    body {
    background-color:black;
    color:white;
    }
</style>

<div style="background-color:#0C5A66;width:760px;height:auto;box-shadow:  0 0 10px 5px rgba(0,0,0,0.8); -moz-box-shadow: 0 0 10px  5px rgba(0,0,0,0.8);
        -webkit-box-shadow: 0 0 10px 5px rgba(0,0,0,0.8);
        border-left-color:black;filter: alpha(opacity=60); opacity: 0.7;float:left">
    <br />
    <h1 style="color:white;margin-left:20px">@ViewBag.Post.PostTitle</h1>
    <div>
        <img src="@ViewBag.Post.ImageUrl" style="width:720px; height:600px;margin-left:20px" />
    </div>
    <div style="color:white;margin-top:7px" ;>
        <span style="margin-left:20px">By @ViewBag.Post.AuthorName)</span>
        <span style="margin-left:20px" class="glyphicon glyphicon-calendar"></span>
        <span>@ViewBag.Post.Date)</span>
        <span style="margin-left:410px" class="glyphicon glyphicon-comment"></span>
        <span>2 Comments</span>
    </div>
    <div>
        <br />
        <br />
        <p style="color:white;margin-left:20px">
            @ViewBag.Post.PostContent)
        </p>
        <br />
    </div>
    <span class="btn btn-primary" id="MyButtonID">@Html.ActionLink("Back to List", "Index")</span>
</div>
