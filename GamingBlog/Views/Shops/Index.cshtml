@model IEnumerable<GamingBlog.Models.Shop>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #slider {
        display: none;
    }
    .container{
        width:4000px
    }
</style>

<div class="container">
    <br />
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/img/1s.jpg" alt="Gamicon" style="width:100%;max-height:450px">
            </div>

            <div class="item">
                <img src="~/img/2s.jpg" alt="Gamicon" style="width:100%;max-height:450px">
            </div>

            <div class="item">
                <img src="~/img/3s.jpg" alt="Gamicon" style="width:100%;max-height:450px">
            </div>
        </div>
    </div>
</div>

<h2 style="color:white">Shop</h2>

<div style="box-shadow:  0 0 10px 5px rgba(0,0,0,0.8); -moz-box-shadow: 0 0 10px  5px rgba(0,0,0,0.8); -webkit-box-shadow: 0 0 10px 5px rgba(0,0,0,0.8);
        max-width:400px; max-height:930px; border-left-color:black;filter: alpha(opacity=60); opacity: 1;
        border: 3px solid black;float:left" class="fade_e">

    <div>
        <img src="~/img/0.jpg" style="width:394px; height:350px;" />
    </div>
    <div style="color:white;width:400px;">
        <span class="row">
            <span style="margin-left:5px;font-size:larger;color:aqua"><b>Remort Control</b></span>
            <br />
            <span style="margin-left:5px">Price: $8</span>
            <span style="margin-left:20px" class="glyphicon glyphicon-calendar"></span>
            <span>28/11/2017</span>
            <span>2 Items</span>
            <button style="margin-left:40px" class="btn btn-success">Buy Now</button>
        </span>
        
        <br />
    </div>
   </div> 

<div style="box-shadow:  0 0 10px 5px rgba(0,0,0,0.8); -moz-box-shadow: 0 0 10px  5px rgba(0,0,0,0.8); -webkit-box-shadow: 0 0 10px 5px rgba(0,0,0,0.8);
        max-width:400px; max-height:930px; border-left-color:black;filter: alpha(opacity=60); opacity: 1;
        border: 3px solid black;float:left;margin-left:15px" class="fade_e">

    <div>
        <img src="~/img/3s.jpg" style="width:394px; height:350px;" />
    </div>
    <div style="color:white;width:400px;">
        <span class="row">
            <span style="margin-left:5px;font-size:larger;color:aqua"><b>Tabs</b></span>
            <br />
            <span style="margin-left:5px">Price: $9</span>
            <span style="margin-left:20px" class="glyphicon glyphicon-calendar"></span>
            <span>28/11/2017</span>
            <span>6 Items</span>
            <button style="margin-left:40px" class="btn btn-success">Buy Now</button>
        </span>

        <br />
    </div>
</div> 
